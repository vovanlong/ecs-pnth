
<div class="container-fuild" ng-app="orderApp">
  <div class="col-lg-12" ng-controller="orders">
    <div class="card">
      <div class="card-header">
        <h4>Bảng quản lý bán hàng hệ thống</h4>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr class="alert alert-success">
                <th class="text-center">ID</th>
                <th class="text-center">Tên người nhận</th>
                <th class="text-center">Số điện thoại</th>
                <th class="text-center">Địa chỉ nhận</th>
                <th class="text-center">Tài khoản mua hàng</th>
                <th class="text-center">Những sản phẩm mua</th>
                <th class="text-center">Cập nhật đơn hàng</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="order in orders">
                <th scope="row">{{order.id}}</th>
                <td class="text-center">{{order.name}}</td>
                <td class="text-center">{{order.phone_number}}</td>
                <td class="text-center">{{order.address}}</td>
                <td class="text-center">{{order.user.name}}</td>
                <td class="text-center">
                  <button type="button" class="btn btn-primary" ng-click="product(order.id,<%=current_user.id%>)" data-toggle="modal" data-target=".modal-{{order.id}}">
                    Xem sản phẩm
                  </button>
                  <div class="modal fade modal-{{order.id}}" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                      <div class="modal-content">
                        <div class="col-lg-12">
                          <div class="card">
                            <div class="card-header">
                              <h4>Sản phẩm đã mua</h4>
                            </div>
                            <div class="card-body">
                              <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                  <thead>
                                    <tr>
                                      <th>ID</th>
                                      <th>Tên sản phẩm</th>
                                      <th>Số lượng mua</th>
                                      <th>Giá sản phẩm</th>
                                      <th>Hình ảnh</th>
                                      <th>Danh mục</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <tr ng-repeat="product in products">
                                      <th scope="row">{{product.id}}</th>
                                      <td>{{product.product.name}}</td>
                                      <td>{{product.quantity}}</td>
                                      <td >{{product.price}}</td>
                                      <td>
                                        <img  src="{{product.product.first_photo.image.thumbnail.url}}"" alt="">
                                      </td>
                                      <td>{{product.product.getCategory.name}}</td>
                                    </tr>
                                  </tbody>
                                </table>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="text-center">
                  <button type="button" class="btn btn-info">Đồng ý</button>
                  <button type="button" class="btn btn-danger">Từ chối</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>