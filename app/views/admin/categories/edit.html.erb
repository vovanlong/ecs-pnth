<div class="form-admin">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <h4>Edit Category Form</h4>
          </div>
          <div class="card-body">
            <%= form_for(@category, url:admin_category_path ) do |f| %>
              <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control', placeholder: "Email Address", data: {validetta: "required"} %> 
              </div>
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_field :description, class: 'form-control', placeholder: "Email Address", data: {validetta: "required"} %> 
              </div>

              <div class="form-group">
                <label>Category Child</label>
               
                <%= f.select :parent_id, options_for_select(@cateory_select.list_categories.collect {|p| [p.name, p.id]},@category.parent_id),
                 {:include_blank => 'None'}, class: "form-control"  %>
              </div>
              <%= f.submit "Create an account", class: "btn btn-primary", value: "Edit User" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
