<div class="user">
  <header class="user__header">
    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg" alt="" />
    <h1 class="user__title">A lightweight and simple sign-up form</h1>
  </header>
  
  <%= form_for(:session, url: login_path, html: { class: "form", id: "form-signup" } ) do |f|  %>
    <div class="form_group">
      <%= f.text_field :email, class: "form__input", placeholder: "Email"%>
    </div>

    <div class="form_group">
      <%= f.password_field :password, class: "form__input", placeholder: "Password" %>
    </div>

    <%= f.label :remember_me, class: "form__input" do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %>


    <%= f.submit "Login", class: "btn" %>
  <% end %>
    
</div>