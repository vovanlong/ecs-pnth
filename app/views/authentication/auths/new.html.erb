
<div class="user">
    <header class="user__header">
        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg" alt="" />
        <h1 class="user__title">A lightweight and simple sign-up form</h1>
    </header>
    <%= form_for(@user, url: authentication_auths_path, html: { class: "form", id: "form-signup" } ) do |f| %>
       <%= render 'shared/error_messages' %>
      <div class="form_group">
        <%= f.text_field :name, class: "form__input", placeholder: "Username", required:"" %>
      </div>

      <div class="form_group">
        <%= f.email_field :email, class: "form__input", placeholder: "Email" %>
      </div>

      <div class="form_group">
        <%= f.password_field :password, class: "form__input", placeholder: "Password" %>
      </div>

      <div class="form_group">
        <%= f.password_field :password_confirmation, class: "form__input", placeholder: "Password confirmation" %>
      </div>

      <div class="form_group">
        <%= f.text_field :address, class: "form__input", placeholder: "Address" %>
      </div>

      <div class="form_group">
        <%= f.text_field :phone_number, class: "form__input", placeholder: "Phone number" %>
      </div>

      <%= f.submit "Create an account", class: "btn" %>
    <%end%>
</div>