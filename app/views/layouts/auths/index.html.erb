<!DOCTYPE html>
<html>
  <head>
    <title>Authentication</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "authentication/auths", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "authentication/main", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <% if flash.any? %>
      <script type="text/javascript">
        <% flash.each do |key, value| %>
          <% type = key.to_s.gsub('danger', 'error').gsub('notice', 'success') %>
            toastr.<%= type %>('<%= value %>')
          <% end %>
        </script>
      <% end %>
    <%= yield %>
  </body>
</html>
