<div class="section">
  <div class="container">
    <%= render 'detail_product' %>
    <div class="features-4" ng-controller="relatedProduct">
      <div class="container">
        <div class="row">
          <div class="col-md-8 ml-auto mr-auto text-center">
            <h2 class="title">Sản phẩm liên quan</h2>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4" ng-repeat="product in productRelated">
            <div class="card card-background card-raised" data-background-color style="background-image: url('{{product.first_photo.image.url}}')">
              <div class="info">
                <div class="icon icon-white">
                  <i class="now-ui-icons shopping_delivery-fast"></i>
                </div>
                <div class="description">
                  <h4 class="info-title">{{product.name}}</h4>
                  <p>{{product.preview}}</p>
                  <a href="#pablo" ng-click="click(product.id)" class="ml-3">chi tiet</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>